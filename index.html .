    <script>
        // --- LOGIC √ÇM THANH (WEB AUDIO API) ---
        const sounds = (()=>{
            let ctx;
            const ensureCtx=()=>{ 
                if(!ctx){ 
                    try{ 
                        ctx=new (window.AudioContext||window.webkitAudioContext)(); 
                    }catch(e){
                         console.error("L·ªói kh·ªüi t·∫°o Audio Context:", e);
                    } 
                } 
                return ctx; 
            };
            const osc = (f=920,ms=90, vol=0.10)=>{ 
                const c=ensureCtx(); 
                if(!c) return;
                
                const o=c.createOscillator(), g=c.createGain();
                o.connect(g).connect(c.destination);
                o.frequency.value=f;
                g.gain.setValueAtTime(vol, c.currentTime); 
                o.start();
                g.gain.exponentialRampToValueAtTime(0.001, c.currentTime+ms/1000); 
                o.stop(c.currentTime+ms/1000);
            };
            
            return { 
                toggle:()=>osc(920,90, 0.08), 
                success:()=>osc(1500,150, 0.1),
                error:()=>osc(300,100, 0.1)
            }; 
        })();

        function playSound(type){
            if(type==='toggle') sounds.toggle();
            else if(type==='success') sounds.success();
            else if(type==='error') sounds.error();
        }

        // --- H√ÄM TH√îNG B√ÅO ---
        function showNotification(message, type = 'success') {
            const notification = document.getElementById('notification');
            notification.textContent = message;
            notification.className = `notification show ${type}`;
            setTimeout(() => notification.classList.remove('show'), 3000);
        }

        // --- H√ÄM CHUNG ---
        
        function toggleFeature(name, enabled) {
            const status = enabled ? 'B·∫¨T' : 'T·∫ÆT';
            const emoji = enabled ? '‚úÖ' : 'üî¥';
            const type = enabled ? 'success' : 'error';
            
            playSound('toggle');

            const feature = Array.from(document.querySelectorAll('.feature-name')).find(el => el.textContent.includes(name)).closest('.feature');
            const featureNameEl = feature.querySelector('.feature-name');
            const BLUE_LIGHT = 'var(--blue-light)';
            const BLUE_PRIMARY = 'var(--blue-primary)';

            if (enabled) {
                feature.style.borderLeft = `3px solid ${BLUE_LIGHT}`;
                featureNameEl.style.textShadow = `0 0 10px ${BLUE_LIGHT}`;
                featureNameEl.style.color = BLUE_LIGHT;
                feature.style.boxShadow = `0 0 15px ${BLUE_LIGHT}`;
                setTimeout(() => {
                    feature.style.boxShadow = '0 0 10px rgba(0, 191, 255, 0.3)';
                }, 300);
            } else {
                feature.style.borderLeft = `3px solid ${BLUE_PRIMARY}`;
                featureNameEl.style.textShadow = `0 0 5px ${BLUE_PRIMARY}`;
                featureNameEl.style.color = BLUE_PRIMARY;
                feature.style.boxShadow = 'none';
            }
            
            showNotification(`${emoji} ${name} ƒë√£ ƒë∆∞·ª£c ${status}!`, type);
        }

        document.querySelectorAll('.toggle-switch input').forEach(toggle => {
            toggle.addEventListener('change', function() {
                const featureName = this.closest('.feature').querySelector('.feature-name').textContent.replace(/\s*(<span class="vip-badge">VIP<\/span>)?\s*$/, '').trim();
                toggleFeature(featureName, this.checked);
            });
        });
        
        function getRandomInt(min, max) {
            return Math.floor(Math.random() * (max - min + 1)) + min;
        }

        // --- SCRIPT LOGIN (ƒê√É G·ª† B·ªé LOGIC KH√ìA KEY THEO THI·∫æT B·ªä) ---
        const loginForm = document.getElementById('login-form');
        const loginMessage = document.getElementById('login-message');
        const loginScreen = document.getElementById('login-screen');
        const mainMenu = document.getElementById('main-menu');

