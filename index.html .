        // H√†m chuy·ªÉn ƒë·ªïi Plain Text sang Base64
        function encodeBase64(str) {
            try {
                return btoa(str);
            } catch (e) {
                console.error("L·ªói m√£ h√≥a Base64:", e);
                return ''; 
            }
        }

        if (loginForm) {
             loginForm.addEventListener('submit', function(e) {
                e.preventDefault();
                
                const enteredKey = document.getElementById('accessKey').value.trim();
                
                loginMessage.textContent = 'ƒêang x√°c th·ª±c Key...';
                loginMessage.className = 'message-box';
                playSound('toggle');
                
                // M√É H√ìA KEY NG∆Ø·ªúNG D√ôNG NH·∫¨P V√ÄO
                const enteredKeyBase64 = encodeBase64(enteredKey);

                // M√¥ ph·ªèng qu√° tr√¨nh x√°c th·ª±c
                setTimeout(() => {
                    // CH·ªà C·∫¶N KI·ªÇM TRA T√çNH H·ª¢P L·ªÜ (Kh√¥ng ki·ªÉm tra ƒë√£ s·ª≠ d·ª•ng)
                    const isValidKey = VALID_ACCESS_KEYS_BASE64.includes(enteredKeyBase64);
                    
                    if (isValidKey) {
                        // Key h·ª£p l·ªá 
