                        loginMessage.className = 'message-box success';
                        playSound('success');
                        
                        // Chuy·ªÉn m√†n h√¨nh sau khi ƒëƒÉng nh·∫≠p th√†nh c√¥ng
                        setTimeout(() => {
                            loginScreen.style.display = 'none';
                            mainMenu.classList.remove('hidden-content');
                            mainMenu.style.display = 'block'; 
                            showNotification('Ch√†o M·ª´ng ! ƒê√£ K√≠ch Ho·∫°t LBN SHOP.', 'success');
                            updateStatsInitial(); 
                        }, 1000);
                        
                    } else {
                        // Key kh√¥ng h·ª£p l·ªá
                        loginMessage.textContent = '‚ùå Key kh√¥ng h·ª£p l·ªá! Vui l√≤ng ki·ªÉm tra l·∫°i.';
                        loginMessage.className = 'message-box error';
                        playSound('error');
                        document.getElementById('accessKey').value = ''; 
                    }
                }, 1500); 
            });
        }


        // --- SCRIPT 1: V√íNG TR√íN HI·ªÜU SU·∫§T (CPU/RAM/NETWORK) ---
        
        const TOTAL_LENGTH = 251.2; 
        const CPU_INITIAL_OFFSET = TOTAL_LENGTH - (TOTAL_LENGTH * 25 / 100); 
        
        let cpuInterval;

        function setCircleValue(id, percent, color, textContent) {
            const progress = document.getElementById(id + '-progress');
            const textElement = document.getElementById(id + '-percent');
            
            if (!progress || !textElement) return;

            const offset = TOTAL_LENGTH - (TOTAL_LENGTH * percent / 100);

            textElement.textContent = textContent !== undefined ? textContent : (percent + '%');
            progress.style.stroke = color; 

            if (id !== 'cpu' || !window.isCpuTextUpdating) {
                 setTimeout(() => {
                     progress.style.strokeDashoffset = offset;
                 }, 10);
            }
        }
        
        function updateCpuText() {
            const cpuText = document.getElementById('cpu-percent');
            if(!cpuText) return; 
            const newPercent = getRandomInt(20, 30);
            cpuText.textContent = newPercent + '%';
            
            const newInterval = getRandomInt(300, 700); 
            
            cpuInterval = setTimeout(updateCpuText, newInterval);
        }
        
        // --- SCRIPT 2: BI·ªÇU ƒê·ªí FPS ƒê·ªòNG ---

        const fpsLine = document.getElementById('fpsLine');
        const currentFpsElement = document.getElementById('currentFps');
        
        const CHART_WIDTH = 340; 
        const CHART_HEIGHT = 180;
        const FPS_MIN = 30;
        const FPS_MAX = 144;
        const FPS_RANGE = FPS_MAX - FPS_MIN;
        const MAX_POINTS = 50; 
        
        let fpsHistory = [];
        let fpsInterval;

        function getRandomFps() {
            let baseFps = 60 + (Math.random() - 0.5) * 10; 
            
            if (Math.random() < 0.05) baseFps = 100 + Math.random() * 44; 
            else if (Math.random() < 0.05) baseFps = 35 + Math.random() * 10; 

            return Math.min(FPS_MAX, Math.max(FPS_MIN, Math.round(baseFps)));
        }

        function updateChart() {
            if (!fpsLine || !currentFpsElement) return;

            const newFps = getRandomFps();
            
            fpsHistory.push(newFps);
            if (fpsHistory.length > MAX_POINTS) {
                fpsHistory.shift(); 
            }

            let points = "";
            const stepX = CHART_WIDTH / (MAX_POINTS - 1);
            
            for (let i = 0; i < fpsHistory.length; i++) {
                const fpsValue = fpsHistory[i];
                
                const normalizedFps = (fpsValue - FPS_MIN) / FPS_RANGE;
                const y = CHART_HEIGHT * (1 - normalizedFps);
                const x = i * stepX;
                
                points += `${x},${y} `;
            }

            fpsLine.setAttribute('points', points.trim());

            currentFpsElement.textContent = `${newFps} FPS`;
            if (newFps > 60) {
                 currentFpsElement.style.color = 'var(--blue-light)';
            } else {
                 currentFpsElement.style.color = 'var(--blue-primary)';
            }
        }
        
        function initFpsChart() {
             fpsHistory = []; 
             for(let i = 0; i < MAX_POINTS; i++) {
                fpsHistory.push(getRandomFps());
            }
            updateChart();
            if (fpsInterval) clearInterval(fpsInterval);
            fpsInterval = setInterval(updateChart, 100);
        }
      // --- SCRIPT 3: ƒêI·ªÄU KHI·ªÇN T√ÇM ·∫¢O (Click V√†o ƒê√¢y)) ---

        const crosshair = document.getElementById('virtualCrosshair');
        const modal = document.getElementById('crosshairModal');
        let isCrosshairVisible = false;

        function openCrosshairModal() {
            if (modal) modal.style.display = 'block';
            updateCrosshair(); 
        }

        function closeCrosshairModal() {
            if (modal) modal.style.display = 'none';
        }

        function initCrosshairState() {
            if (!crosshair) return;
            isCrosshairVisible = false;
            crosshair.style.display = 'none';
            
            const button = document.querySelector('.toggle-crosshair-btn');
            if (button) {
                button.textContent = 'ƒêANG T·∫ÆT: B·∫§M ƒê·ªÇ B·∫¨T';
                button.style.background = 'var(--blue-primary)'; 
            }
        }

        function toggleCrosshairDisplay() {
            if (!crosshair) return;

            isCrosshairVisible = !isCrosshairVisible;
            
            crosshair.style.display = isCrosshairVisible ? 'block' : 'none';
            
            const button = document.querySelector('.toggle-crosshair-btn');
            if (button) {
                if (isCrosshairVisible) {
                    button.textContent = 'ƒêANG B·∫¨T: B·∫§M ƒê·ªÇ T·∫ÆT';
                    button.style.background = 'var(--success)';
                    showNotification('üéØ T√¢m ·∫£o ƒë√£ B·∫¨T!', 'success');
                    playSound('toggle');
                } else {
                    button.textContent = 'ƒêANG T·∫ÆT: B·∫§M ƒê·ªÇ B·∫¨T';
                    button.style.background = 'var(--blue-primary)'; 
                    showNotification('üéØ T√¢m ·∫£o ƒë√£ T·∫ÆT!', 'error');
                    playSound('toggle');
                }
            }
        }

        function updateCrosshair() {
            if (!crosshair) return;

            const sizeRange = document.getElementById('sizeRange').value;
            const xRange = document.getElementById('xRange').value;
            const yRange = document.getElementById('yRange').value;
            const opacityRange = document.getElementById('opacityRange').value;

            document.getElementById('sizeValue').textContent = sizeRange;
            document.getElementById('xValue').textContent = xRange;
            document.getElementById('yValue').textContent = yRange;
            document.getElementById('opacityValue').textContent = opacityRange;

            const baseSize = 64; 
            const newSize = (baseSize * sizeRange) / 100;
            
            crosshair.style.width = `${newSize}px`;
            crosshair.style.height = `${newSize}px`;

            crosshair.style.transform = `translate(calc(-50% + ${xRange}px), calc(-50% + ${yRange}px))`;
            
            crosshair.style.opacity = opacityRange;
        }

        window.onclick = function(event) {
            if (event.target == modal) {
                closeCrosshairModal();
            }
        }
   
       
        // --- SCRIPT 4: M·ªû GAME ---
        function openFreeFire() {
            const url = 'freefireth://';
            
            showNotification('üî• ƒêang kh·ªüi ch·∫°y Free Fire...', 'success');
            playSound('success');
            
            // D√πng setTimeout ƒë·ªÉ kh√¥ng l√†m gi√°n ƒëo·∫°n qu√° tr√¨nh hi·ªÉn th·ªã th√¥ng b√°o
            setTimeout(() => {
                window.location.href = url;
            }, 500);
        }

        function openFreeFireMax() {
            const url = 'freefiremax://';
            
            showNotification('‚ö° ƒêang kh·ªüi ch·∫°y Free Fire MAX...', 'success');
            playSound('success');
            
            setTimeout(() => {
                window.location.href = url;
            }, 500);
        }

        // --- H√ÄM KH·ªûI T·∫†O CHUNG ---
        function updateStatsInitial() {
            // Ch·ªâ ch·∫°y c√°c stats ƒë·ªông khi menu ch√≠nh ƒë∆∞·ª£c hi·ªÉn th·ªã
            if (mainMenu.style.display === 'none') return;

            // Kh·ªüi t·∫°o RAM v√† Network
            const initialRamPercent = getRandomInt(30, 60); 
            setCircleValue('ram', initialRamPercent, '#ff7f00'); 
            
            const initialNetworkPercent = getRandomInt(0, 54); 
            setCircleValue('network', initialNetworkPercent, '#00ff00'); 
            
            // Kh·ªüi t·∫°o CPU
            const cpuProgress = document.getElementById('cpu-progress');
            if(cpuProgress) {
                cpuProgress.style.strokeDashoffset = CPU_INITIAL_OFFSET;
                if (cpuInterval) clearTimeout(cpuInterval);
                updateCpuText(); 
            }
            
            // Kh·ªüi t·∫°o FPS Chart
            initFpsChart();
            
            // Kh·ªüi t·∫°o T√¢m ·∫¢o
            updateCrosshair();
            initCrosshairState(); 
        }

        // --- SCRIPT 5: ·∫®N/HI·ªÜN KEY TRUY C·∫¨P (Logic cho bi·ªÉu t∆∞·ª£ng CSS) ---
        
        document.addEventListener('DOMContentLoaded', () => {
            const accessKeyInput = document.getElementById('accessKey');
            const togglePasswordButton = document.getElementById('togglePassword');
            const eyeIcon = document.querySelector('#togglePassword .eye-icon'); 

            if (togglePasswordButton && accessKeyInput && eyeIcon) {
                // Kh·ªüi t·∫°o tr·∫°ng th√°i ban ƒë·∫ßu: ·∫©n key, m·∫Øt m·ªü (kh√¥ng c√≥ g·∫°ch ch√©o)
                accessKeyInput.setAttribute('type', 'password');
                eyeIcon.classList.remove('closed');

                togglePasswordButton.addEventListener('click', function() {
                    // Thay ƒë·ªïi type gi·ªØa 'password' v√† 'text'
                    const type = accessKeyInput.getAttribute('type') === 'password' ? 'text' : 'password';
                    accessKeyInput.setAttribute('type', type);

                    // Thay ƒë·ªïi bi·ªÉu t∆∞·ª£ng con m·∫Øt b·∫±ng c√°ch th√™m/x√≥a class 'closed'
                    if (type === 'password') {
                        eyeIcon.classList.remove('closed'); // Key ·∫©n, m·∫Øt m·ªü
                    } else {
                        eyeIcon.classList.add('closed'); // Key hi·ªán, m·∫Øt ƒë√≥ng (c√≥ g·∫°ch ch√©o)
                    }
                });
            }

            // ƒê·∫£m b·∫£o m√†n h√¨nh login hi·ªÉn th·ªã v√† menu ·∫©n khi load
            if (loginScreen) {
                loginScreen.style.display = 'block';
            }
            if (mainMenu) {
                mainMenu.style.display = 'none';
                mainMenu.classList.add('hidden-content');
            }
        });
    </script>
